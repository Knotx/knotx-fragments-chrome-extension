{
  "env": {
    "browser": true,
    "es2020": true,
    "webextensions": true
  },
  "extends": ["airbnb", "plugin:react/recommended", "plugin:jest/recommended"],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "sourceType": "module"
  },
  "plugins": ["react", "jest"],
  "rules": {
    "max-len": ["error", { "code": 120 }],
    "import/prefer-default-export": "off"
  }
}
